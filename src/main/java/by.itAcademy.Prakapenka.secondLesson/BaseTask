import java.util.Random;
import java.util.Scanner;

public class BaseTask
{
    public static void main(String[] args) {
        //base values` blocks
        int testIntOne = 3;
        int testIntTwo = 8;
        double testDoubleOne = 1.5;
        double testDoubleTwo = 2.7;
        double testDoubleThree = 5.5;

        //tests` blocks
        System.out.println("User`s int number: " + inputIntNumber()); //for func to input integer number
        System.out.println("User`s double number: " + inputDoubleNumber()); //for func to input double number
        System.out.println("User`s namr: " + inputUserName()); //for func to input name
        System.out.println("Sqrt of " + testIntOne + " is " + numSqrt(testIntOne)); //calc the square of number
        System.out.println("Average of " + testIntOne + " and " + testIntTwo + " is " + calcIntAverage(testIntOne, testIntTwo)); //calc the avg value of 2 int
        System.out.println("Average of numbers" + testDoubleOne + ", " + testDoubleTwo + " and " + testDoubleThree + " is " + calcDoubleAverage(testDoubleOne, testDoubleTwo, testDoubleThree)); //calc the avg value of 3 double
        System.out.println("Random value in range of " + testIntOne + " - " + testIntTwo + " is " + calcRandomInGap(testIntOne, testIntTwo)); //search random value in range of 2 numbers
    }

    public static int inputIntNumber(){
        System.out.println("Unput your integer number...");
        Scanner scn = new Scanner(System.in);
        return (scn.nextInt());
    }

    public static double inputDoubleNumber(){
        System.out.println("Unput your double number...");
        Scanner scn = new Scanner(System.in);
        return (scn.nextDouble());
    }

    public static String inputUserName(){
        System.out.println("Unput your name...");
        Scanner scn = new Scanner(System.in);
        return (scn.nextLine());
    }

    public static int numSqrt(int number){
        return (number * number);
    }

    public static double calcIntAverage(int number_1, int number_2){
        return ((double)(number_1 + number_2)/2);
    }

    public static double calcDoubleAverage(double number_1, double number_2, double number_3){
        return ((number_1 + number_2 + number_3)/3);
    }

    public static int calcRandomInGap(int number_1, int number_2){
        Random random = new Random();
        return (number_1 + random.nextInt(number_2 - number_1 + 1));
    }
}